{
    "apiVersion": "apps/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "kbmd-app",
        "labels": {
            "app": "kbmd"
        }
    },
    "spec": {
        "replicas": 3,
        "template": {
            "metadata": {
                "labels": {
                    "app": "kbmd",
                    "tier": "web"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "kbmd",
                        "image": "gcr.io/custom-fiber-204515/kbmd:v1",
                        "livenessProbe": {
                            "httpGet": {
                                "path": "/healthz",
                                "port": 3000
                            },
                            "initialDelaySeconds": 5,
                            "timeoutSeconds": 3,
                            "periodSeconds": 15
                        },
                        "readinessProbe": {
                            "httpGet": {
                                "path": "/healthz",
                                "port": 3000
                            },
                            "initialDelaySeconds": 5,
                            "timeoutSeconds": 3,
                            "periodSeconds": 15
                        },
                        "ports": [
                            {
                                "containerPort": 3000
                            }
                        ]
                    }
                ]
            }
        }
    }
}
